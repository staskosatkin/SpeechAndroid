<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/main_layout" android:weightSum="1">

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:id="@+id/button" android:nestedScrollingEnabled="true" android:layout_weight="0.10"
            />
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.15" android:id="@+id/delimiter">
    </FrameLayout>
    <Button
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:id="@+id/button2" android:layout_gravity="right" android:layout_weight="0.10"/>
</LinearLayout>